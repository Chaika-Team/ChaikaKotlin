<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <application
        android:name=".MyApp"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Chaika"
        tools:targetApi="31">

        <!-- Основное активити с навигационным intent‑фильтром для deep link -->
        <activity
            android:name=".ui.activities.MainActivity"
            android:launchMode="singleTask"
            android:exported="true">
            <!-- Для запуска из лаунчера -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <!-- Для обработки deep link -->
            <intent-filter android:autoVerify="true">
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:scheme="com.example.chaika"
                    android:host="oauth2redirect" />
            </intent-filter>
        </activity>

        <!-- Отключаем стандартный получатель Redirect URI, чтобы не было дублирования -->
        <activity
            android:name="net.openid.appauth.RedirectUriReceiverActivity"
            android:enabled="false"
            android:exported="true" />

    </application>
</manifest>
