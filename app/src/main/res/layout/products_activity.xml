<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginHorizontal="10dp"
    android:paddingBottom="20dp"
    android:background="@drawable/shape_circle_corner">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/product_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Продукт"
            android:layout_gravity="center"
            android:textColor="@color/text_main"
            android:textSize="32sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/product_quantity"
                android:layout_width="35sp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="10"
                android:textColor="@color/text_main"
                android:textSize="24sp"
                android:drawableStart="@drawable/add_cart"
                android:drawablePadding="-40dp"
                tools:ignore="RtlHardcoded" />

            <TextView
                android:id="@+id/product_soldCount"
                android:layout_width="35sp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="5"
                android:textColor="@color/text_main"
                android:textSize="24sp"
                android:drawablePadding="-40dp"
                android:drawableStart="@drawable/sold_cart" />

            <TextView
                android:id="@+id/product_price"
                android:layout_width="35sp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="100"
                android:textColor="@color/text_main"
                android:textSize="24sp"
                android:drawableStart="@drawable/price_img"
                android:drawablePadding="-40dp"/>
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
